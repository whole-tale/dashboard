{{#if (not-eq model.status 0)}}
    {{#if model.iframe}}
      <div class="rounded-bottom" style="padding: 0; margin: 0; overflow-y: hidden;">
        <iframe id="frontendDisplay"
                src="{{model.url}}"
                class="ui basic segment">
        </iframe>
      </div>
    {{else}}
        <div class="placeholder message">
            <p>
              The compute environment for this Tale must run in a separate browser window.<br/>
              <a class="ui primary button huge" href="{{model.url}}" target="_blank">Go to new window</a>
            </p>
        </div>
    {{/if}}
{{else}}
  <div class="placeholder message">
    <p>Creating your new Tale...</p>
  </div>
{{/if}}