<div class="ui grid">
    <div class="one wide column" style="padding: 0; margin: 0;">
      {{#link-to "upload" class="ui fluid small blue button"}}<i class="left arrow icon"></i> {{/link-to}}
    </div>
    <div class="fifteen wide column" style="padding: 0; margin: 0;">
        <div class="ui large breadcrumb">
            Back To
            <div class="active section">{{truncate-name currentBreadCrumb.name}}</div>
        </div>
    </div>
</div>

<div class="ui tool segment">
    <span class="ui header" style="margin-right: 10px">Tools</span>
  {{#link-to "upload.edit" model class="ui small blue button"}}<i class="edit icon"></i> Edit{{/link-to}}
    <a href="{{filePreviewURL}}" class="ui small blue button" target="_blank"><i class="eye icon"></i> Preview</a>
    <a href="{{fileDownloadURL}}" class="ui small blue button"><i class="cloud download icon"></i>Download</a>
</div>

<div class="ui header">
    <i class="info circle icon"></i> File Info
</div>
<br>

<form class="ui form" {{action "updateDetails" on="submit"}}>
    <div class="field">
        <label>File Name</label>
        {{input type="text" name="file-name" placeholder="File Name" value=model.name}}
    </div>
    <div class="field">
        <label>Description</label>

        <div class="ui raised segment">
          {{medium-content-editable value=model.description options=mediumEditorOptions onFinishedTyping=(action "textUpdated")}}
        </div>

    </div>

  {{input type="submit" class="ui blue submit button" value="Update"}}
</form>

{{#if details_updating}}
    <div class="ui segment" style="height:100px">
        <div class="ui active inverted dimmer">
            <div class="ui text loader">Saving details...</div>
        </div>
    </div>
{{/if}}

{{#if details_updated}}
    <div class="ui green icon message">
        <i class="checkmark icon"></i>
        <div class="content">
            <div class="header">
                The name and description has been saved !
            </div>
        </div>
    </div>
{{/if}}

{{#if details_not_updated}}
    <div class="ui red icon message">
        <i class="remove circle icon"></i>
        <div class="content">
            <div class="header">
                The details could not be saved !
            </div>
        </div>
    </div>
{{/if}}

<div class="ui header">
    <i class="tasks icon"></i> File Properties
</div>
<div class="ui form">
    <br>
    <div class="field">
        <label>File ID</label>
        <input type="text" name="file-id" placeholder="File ID" value="{{model._id}}" disabled>
    </div>

    <div class="field">
        <label>File Size</label>
        <input type="text" name="file-size" placeholder="File Size" value="{{bytes-to-readable model.size}}" disabled>
    </div>

    <div class="field">
        <label>Date Created</label>
        <input type="text" name="date-created" placeholder="Date Created" value="{{from-now model.created}}" disabled>
    </div>

    <div class="field">
        <label>Last Updated</label>
        <input type="text" name="last-updated" placeholder="Last Updated" value="{{from-now model.updated}}" disabled>
    </div>
</div>




