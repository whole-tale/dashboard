<div class="ui grid">
    <div class="one wide column" style="padding: 0 0 0 0; margin: 0px 0 0 0;">
      {{#link-to "upload" class="ui fluid small blue button"}}<i class="left arrow icon"></i> {{/link-to}}
    </div>
    <div class="fifteen wide column" style="padding: 0 0 0 0; margin: 0px 0 0 0;">
        <div class="ui large breadcrumb">
            Back To
            <div class="active section">{{truncate-name currentBreadCrumb.name}}</div>
        </div>
    </div>
</div>

<div class="ui tool segment">
    <span class="ui header" style="margin-right: 10px">Tools</span>
  {{#link-to "upload.view" model class="ui blue button"}}<i class="edit icon"></i> View Details{{/link-to}}
    <a href="{{filePreviewURL}}" class="ui small blue button" target="_blank"><i class="eye icon"></i> Preview</a>
    <a href="{{fileDownloadURL}}" class="ui small blue button"><i class="cloud download icon"></i>Download</a>
</div>



{{#if isEditable}}
  {{ui/files/text-editor content=edit_text action="textUpdated"}}
{{else}}
    <div class="ui icon message">
        <i class="alert icon"></i>
        <div class="content">
            <div class="header">
                Editing not supported!
            </div>
            <p>Either the file is not a text file or the size is larger than the supported size. This file cannot be edited in WholeTale.</p>
        </div>
    </div>
{{/if}}

<div class="ui blue submit button" {{action "updateTextFile"}}>Update</div>
