            <div class="ui large header">
                Registered<br>Data
            </div>
            <br>
        </div>

        <div class="two wide column">
        </div>
        <div class="center aligned four wide column">

            <br>
            <i class="huge dashboard icon"></i>
            <div class="ui large header">
                Analyze/<br>Compute
            </div>
            <br>

        </div>
        <div class="two wide column">
        </div>
        <div class="center aligned four wide column">

            <br>
            <i class="criss cross icon"></i>
            <div class="ui large header">
                Published<br>Results
            </div>

            <br>
        </div>
    </div>
  </div>

    <br>
    <br>
