        {{#ui-accordion as |execute|}}
            <div class="title">
                <i class="dropdown icon"></i>
                <a class="ui header" style="color: white">Login questions?</a>
            </div>
            <div class="content">
                <div class="ui raised segment">
                    <div class="ui header header">
